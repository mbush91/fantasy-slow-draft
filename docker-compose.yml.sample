services:
  mongo:
    image: mongo:6
    container_name: fantasy-mongo
    ports:
      - "27017:27017"
    volumes:
      - mongo-data:/data/db
    restart: unless-stopped

  backend:
    build: ./backend
    container_name: fantasy-backend
    environment:
      - MONGO_URL=mongodb://mongo:27017
      - DB_NAME=fantasy_draft
      - SECRET_KEY=change-this
      - CORS_ORIGINS=http://localhost:5174
    depends_on:
      - mongo
    ports:
      - "8012:8000"
    restart: unless-stopped

  frontend:
    build: ./frontend
    container_name: fantasy-frontend
    environment:
      - VITE_API_URL=${BACKEND_URL:-http://localhost:8012}
    depends_on:
      - backend
    ports:
      - "5174:5173"
    restart: unless-stopped
volumes:
  mongo-data:
